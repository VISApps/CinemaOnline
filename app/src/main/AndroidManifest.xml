<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moviedatabase.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="visapps.moviedatabase.app.CinemaOnline"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="visapps.moviedatabase.app.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="visapps.moviedatabase.app.activities.AuthActivity"
            android:label="@string/title_activity_auth"
            android:theme="@style/AppTheme" />
        <activity
            android:name="visapps.moviedatabase.app.activities.FilmActivity"
            android:label="@string/title_activity_film"
            android:theme="@style/AppTheme" />
        <activity
            android:name="visapps.moviedatabase.app.activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme" />
        <activity
            android:name="visapps.moviedatabase.app.activities.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="visapps.moviedatabase.app.activities.MarkActivity"
            android:label="@string/title_activity_mark"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>